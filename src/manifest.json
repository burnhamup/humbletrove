{
    "manifest_version": 3,
    "name": "Humble Bundle Trove Downloader",
    "version": "1.0",
    "description": "Restores download links for games in the humble trove.",
    "permissions": ["scripting", "downloads", "storage"],
    "host_permissions": [
      "https://www.humblebundle.com/client/user",
      "https://www.humblebundle.com/api/v1/user/download/sign",
      "https://www.humblebundle.com/client/catalog*"
    ],
    "action": {
      "default_icon": {
        "48": "bindle.png",
        "128": "bindle.png"
      }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
      "48": "bindle.png",
      "128": "bindle.png"
    }
  }
  